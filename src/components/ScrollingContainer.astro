---
const { cardContent } = Astro.props;
---

<ul class="full-width">
  {
    cardContent.map((card) => (
      <li>
        <h3>{card.title}</h3>
        <p>{card.body}</p>
      </li>
    ))
  }
</ul>

<style>

.full-width {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: inherit;
    row-gap: 3rem;
    
    > * {
      grid-column: 2;
    }
    
    > ul {
      scroll-snap-type: x mandatory;
      grid-column: 1 / -1;
      padding-inline: max(1rem, 50% - var(--content-width) / 2);
      padding-block-end: 1rem;
    }
  }
ul {
  list-style: none;
  display: flex;
  gap: 1rem;
  overflow-x: auto;
  
  li {
    flex-basis: min(400px, 90%);
    flex-shrink: 0;
    background: #EBEBEB;
    color: #595566;
    border-radius: 8px;
    font-size: 1rem;
    padding: 2.75rem 2.1875rem;
    align-self: start;
    scroll-snap-align: center;
    h3 {
      font-weight: 700;
      font-size: 1.5625rem;
    }
  }
}


</style>
